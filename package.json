{
  "version": "1.0.5",
  "name": "schedi",
  "description": "A lightweight and flexible task scheduling library for JavaScript & TypeScript. Easily manage interval-based and one-time tasks with precise execution control.",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/schedi.cjs",
  "module": "./dist/schedi.js",
  "types": "./dist/schedi.d.ts",
  "exports": {
    ".": {
      "import": "./dist/schedi.js",
      "require": "./dist/schedi.cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erfanezk/schedi.git"
  },
  "author": {
    "name": "Erfan Ezkat",
    "url": "https://github.com/erfanezk",
    "email": "erfan.ezkat@gmail.com"
  },
  "keywords": [
    "task",
    "task-runner",
    "action",
    "schedi",
    "schedule",
    "automation",
    "job-scheduler",
    "timed-execution",
    "recurring-tasks",
    "background-tasks"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "lint:fix": "eslint . --ext .ts --fix",
    "build": "tsc && vite build"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@eslint/js": "^9.19.0",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-promise": "^7.2.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "neostandard": "^0.12.1",
    "prettier": "^3.4.2",
    "pretty-quick": "^4.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0",
    "vite": "^5.4.1",
    "vite-plugin-dts": "^4.2.4"
  },
  "dependencies": {
    "uuid": "^11.0.5"
  }
}
